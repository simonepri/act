{
  "private": true,
  "name": "act",
  "version": "0.1.1",
  "description": "Multi-purpose URI tracker",
  "license": "MIT",
  "scripts": {
    "start": "now dev",
    "lint": "xo",
    "test": "xo &&nyc ava",
    "update": "npm-check -u",
    "release": "np"
  },
  "files": [
    "src"
  ],
  "engine": {
    "node": ">=22"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "device": "^0.3.9",
    "dotenv": "^17.2.2",
    "googleapis": "^159.0.0",
    "iplocation": "^7.2.0",
    "ua-parser-js": "^2.0.5",
    "valid-url": "^1.0.9"
  },
  "devDependencies": {
    "ava": "*",
    "now": "*",
    "np": "*",
    "npm-check": "*",
    "nyc": "*",
    "xo": "*"
  },
  "ava": {
    "verbose": true
  },
  "nyc": {
    "reporter": [
      "lcovonly",
      "text"
    ]
  },
  "xo": {
    "prettier": true,
    "space": true,
    "rules": {
      "object-shorthand": "off",
      "prefer-destructuring": "off"
    }
  }
}
